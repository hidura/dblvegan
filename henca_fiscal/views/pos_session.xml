<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ipf_manager_pos_session_inherit_form" model="ir.ui.view">
            <field name="name">ipf_manager_pos_session_inherit_form</field>
            <field name="model">pos.session</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="js_class">interface_wizard</attribute>
                </xpath>


                <xpath expr="//header/button[@name='action_pos_session_closing_control']" position="after">
                    <button name="z_close_print" custom="z_close_print"  context='{"itf_type": "z_close_print"}' string="Imprimir Cierre Z" type="object" class="btn-primary"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
