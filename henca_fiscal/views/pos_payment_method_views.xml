<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="henca_fiscal_view_pos_payment_method_form" model="ir.ui.view">
        <field name="name">henca.fiscal.pos.view.pos.payment.method.form</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="payment_form" string="Metodo de Pago en la Impresora Fiscal"/>
            </xpath>
        </field>
    </record>
</odoo>
