<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="SyncNotification" t-inherit="point_of_sale.SyncNotification" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('oe_status')]" position="inside">
            <span class="js_printer_fiscal">
                <span class='js_msg_printer oe_hidden'>0</span>
                <span class="js_printer_connected oe_icon oe_green">
                    <i class='fa fa-fw fa-print' role="img" aria-label="Synchronisation Connected" title="Synchronisation Connected"></i>
                </span>
                <span class="js_printer_connecting oe_icon oe_hidden">
                    <i class='fa fa-fw fa-spin fa-spinner' role="img" aria-label="Synchronisation Connecting" title="Synchronisation Connecting"></i>
                </span>
                <span class="js_printer_disconnected oe_icon oe_red oe_hidden">
                    <i class='fa fa-fw fa-print' role="img" aria-label="Synchronisation Disconnected" title="Synchronisation Disconnected"></i>
                </span>
                <span class="js_printer_error oe_icon oe_red oe_hidden">
                    <i class='fa fa-fw fa-warning' role="img" aria-label="Synchronisation Error" title="Synchronisation Error"></i>
                </span>
            </span>
        </xpath>
    </t>

    <t t-name="ReceiptScreen" t-inherit="point_of_sale.ReceiptScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('print')]" position="after">
            <div t-if="env.pos.config.iface_fiscal_print_order_bill" class="button ipf-print-bill">
                <i class='fa fa-print'></i> Impresi√≥n Fiscal
            </div>
        </xpath>
    </t>

</templates>
